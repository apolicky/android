            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout6"
            app:layout_constraintStart_toStartOf="@+id/create_arrival_time_text_view"
            app:layout_constraintTop_toBottomOf="@+id/create_arrival_time_text_view">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ins_arrival_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/create_time_hint"
                android:inputType="time" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:errorEnabled="false"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout7"
            app:layout_constraintStart_toStartOf="@+id/create_camp_address_text_view"
            app:layout_constraintTop_toBottomOf="@+id/create_camp_address_text_view">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ins_camp_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|top"
                android:hint="@string/create_camp_address_hint_cz"
                android:inputType="textMultiLine|textPostalAddress"
                android:singleLine="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/create_contact_info_text_view"
            app:layout_constraintStart_toStartOf="@+id/create_contact1_name_text_view"
            app:layout_constraintTop_toBottomOf="@+id/create_contact1_name_text_view">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ins_contact1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/create_contact_name_hint_cz"
                android:inputType="textPersonName|text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout9"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout9"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout9">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ins_contact1_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/create_contact_value_hint"
                android:inputType="phone" />
        </com.google.android.material.textfield.TextInputLayout>



        <TextView
            android:id="@+id/create_contact3_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/create_contact3_tag_cz"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout12"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout12" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout12"
            app:layout_constraintStart_toStartOf="@+id/create_contact3_name_text_view"
            app:layout_constraintTop_toBottomOf="@+id/create_contact3_name_text_view">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ins_contact3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/create_contact_name_hint_cz"
                android:inputType="textPersonName|text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout13"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout13"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout13">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ins_contact3_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/create_contact_value_hint"
                android:inputType="phone" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/create_contact2_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/create_contact2_tag_cz"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout10"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout10" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout10"
            app:layout_constraintStart_toStartOf="@+id/create_contact2_name_text_view"
            app:layout_constraintTop_toBottomOf="@+id/create_contact2_name_text_view">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ins_contact2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/create_contact_name_hint_cz"
                android:inputType="textPersonName|text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
